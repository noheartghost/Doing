<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <ImageView
        android:id="@+id/gym_list_imageId"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gym_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:textSize="14dp"
        app:layout_constraintLeft_toRightOf="@id/gym_list_imageId"
        app:layout_constraintTop_toTopOf="@id/gym_list_imageId"/>

    <TextView
        android:id="@+id/gym_list_district"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        app:layout_constraintLeft_toRightOf="@id/gym_list_name"
        app:layout_constraintTop_toTopOf="@id/gym_list_name"
        />

    <TextView
        android:id="@+id/gym_list_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:lines="2"
        app:layout_constraintLeft_toLeftOf="@id/gym_list_name"
        app:layout_constraintTop_toBottomOf="@id/gym_list_name"/>


    <ImageView
        android:id="@+id/gym_list_place"
        android:layout_width="11dp"
        android:layout_height="16dp"
        android:src="@drawable/place_indicator_icon"
        app:layout_constraintTop_toBottomOf="@id/gym_list_address"
        app:layout_constraintRight_toRightOf="parent"
        />


    <RatingBar
        android:id="@+id/gym_list_ratingbar"
        style="@style/heartRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        app:layout_constraintTop_toBottomOf="@id/gym_list_place"
        app:layout_constraintLeft_toLeftOf="@id/gym_list_name"/>


    <TextView
        android:id="@+id/gym_list_ratings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        app:layout_constraintLeft_toRightOf="@id/gym_list_ratingbar"
        app:layout_constraintTop_toTopOf="@id/gym_list_ratingbar"/>

    <TextView
        android:id="@+id/gym_list_views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="12dp"
        app:layout_constraintLeft_toRightOf="@id/gym_list_ratings"
        app:layout_constraintTop_toTopOf="@id/gym_list_ratings"/>

    <TextView
        android:id="@+id/gym_list_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@id/gym_list_place"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>