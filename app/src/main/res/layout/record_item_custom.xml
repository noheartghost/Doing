<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/record_item_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorSecondary"
        android:textSize="11sp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/record_item_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/record_item_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="11sp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/record_item_name"
        app:layout_constraintRight_toLeftOf="@+id/record_item_more"
        app:layout_constraintBottom_toBottomOf="@id/record_item_name"
        />

    <ImageButton
        android:id="@+id/record_item_more"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:background="@drawable/right"
        android:layout_marginRight="22dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/record_item_content"
        app:layout_constraintBottom_toBottomOf="@id/record_item_name"
        />
</merge>