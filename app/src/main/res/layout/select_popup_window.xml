<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/textLightPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/pop_select_type1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="筛选类别（可多选）"
        android:textSize="13sp"
        android:gravity="left"
        android:layout_marginTop="15dp"
        android:textColor="@color/textDarkGrey"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/pop_select_type1_item1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/colorGrey"
        android:textColor="@color/colorPrimary"
        android:text="筛选选项"
        android:gravity="center"
        android:textSize="13sp"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="@id/pop_select_type1"
        app:layout_constraintTop_toBottomOf="@id/pop_select_type1"
        app:layout_constraintRight_toLeftOf="@+id/pop_select_type1_item2"/>

    <TextView
        android:id="@+id/pop_select_type1_item2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/colorGrey"
        android:textColor="@color/colorPrimary"
        android:text="筛选选项"
        android:layout_marginLeft="10dp"
        android:textSize="13sp"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/pop_select_type1_item1"
        app:layout_constraintTop_toTopOf="@id/pop_select_type1_item1"
        app:layout_constraintRight_toLeftOf="@+id/pop_select_type1_item3"/>

    <TextView
        android:id="@+id/pop_select_type1_item3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/colorGrey"
        android:textColor="@color/colorPrimary"
        android:textSize="13sp"
        android:text="筛选选项"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/pop_select_type1_item2"
        app:layout_constraintTop_toTopOf="@id/pop_select_type1_item1"
        app:layout_constraintRight_toRightOf="@id/pop_select_type1"/>

    <TextView
        android:id="@+id/pop_price_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="价格区间（元）"
        android:textSize="13sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/textDarkGrey"
        android:gravity="left"
        app:layout_constraintLeft_toLeftOf="@id/pop_select_type1"
        app:layout_constraintRight_toRightOf="@id/pop_select_type1"
        app:layout_constraintTop_toBottomOf="@id/pop_select_type1_item1"/>

    <EditText
        android:id="@+id/pop_low_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="最低价"
        android:textColor="@color/textDarkGrey"
        android:cursorVisible="false"
        android:textSize="13sp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/textview_grey_border_radius"
        app:layout_constraintTop_toBottomOf="@id/pop_price_title"
        app:layout_constraintLeft_toLeftOf="@id/pop_select_type1"
        app:layout_constraintRight_toLeftOf="@+id/pop_line_price"/>

    <TextView
        android:id="@+id/pop_line_price"
        android:layout_width="20dp"
        android:layout_height="6px"
        android:background="@color/colorGrey"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        app:layout_constraintTop_toTopOf="@id/pop_low_price"
        app:layout_constraintBottom_toBottomOf="@id/pop_low_price"
        app:layout_constraintLeft_toRightOf="@id/pop_low_price"
        app:layout_constraintRight_toLeftOf="@+id/pop_high_price"
        />

    <EditText
        android:id="@+id/pop_high_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="最高价"
        android:textColor="@color/textDarkGrey"
        android:cursorVisible="false"
        android:textSize="13sp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/textview_grey_border_radius"
        app:layout_constraintTop_toTopOf="@id/pop_low_price"
        app:layout_constraintLeft_toRightOf="@id/pop_line_price"
        app:layout_constraintRight_toRightOf="@id/pop_select_type1"/>

    <View
        android:id="@+id/popup_line"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/colorGrey"
        android:layout_marginTop="19dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pop_high_price"/>

    <TextView
        android:id="@+id/pop_reset"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="重置"
        android:textSize="15sp"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/textbutton_white_border_radius"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/popup_line"
        app:layout_constraintLeft_toLeftOf="@id/pop_select_type1"
        app:layout_constraintRight_toLeftOf="@+id/pop_submit"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/pop_submit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="确定"
        android:textSize="15sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/textDarkInvisible"
        android:background="@drawable/textbutton_black_border_radius"
        app:layout_constraintTop_toTopOf="@id/pop_reset"
        app:layout_constraintLeft_toRightOf="@id/pop_reset"
        app:layout_constraintRight_toRightOf="@id/pop_select_type1"/>

</android.support.constraint.ConstraintLayout>